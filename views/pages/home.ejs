<section ng-controller="homeController as homeCtrl" class="main">
    <div class="top-header">
        <div class="container">
            <div class="col-sm-2">&nbsp;</div>
            <div class="col-sm-8 text-center">
                <h2>PLAY DAILY FANTASY SPORTS<br>WITH COUNTERDRAFT</h2>
            </div>
            <div class="col-sm-2">&nbsp;</div>
        </div>
        <div class="col-xs-12">&nbsp;</div>
        <div class="col-xs-12">&nbsp;</div>
        <div class="home-body">
            <div class="container">
                <div class="body-section col-md-4">
                    <div class="col-xs-2 col-sm-1 col-md-2">
                        <i class="round">&nbsp;1&nbsp;</i>
                    </div>
                    <div class="col-xs-10">
                        <h3 class="module-title-1">Register</h3>
                    </div>
                    <div class="col-xs-12">&nbsp;</div>
                    <div class="col-xs-12">
                        <p>Signup for a free CounterDraft
                            <br>account in seconds.</p>
                    </div>
                    <div class="col-xs-12">&nbsp;</div>
                    <div class="col-xs-12">
                        <img src="tmp-holder.png">
                    </div>
                </div>
                <div class="body-section col-md-4">
                    <div class="col-xs-2 col-sm-1 col-md-2">
                        <i class="round">&nbsp;2&nbsp;</i>
                    </div>
                    <div class="col-xs-10">
                        <h3 class="module-title-1">Enter A Contest</h3>
                    </div>
                    <div class="col-xs-12">&nbsp;</div>
                    <div class="col-xs-12">
                        <p>Draft a team of players and stay
                            <br>under the salary cap.</p>
                    </div>
                    <div class="col-xs-12">&nbsp;</div>
                    <div class="col-xs-12">
                        <img src="tmp-holder.png">
                    </div>
                </div>
                <div class="body-section col-md-4">
                    <div class="col-xs-2 col-sm-1 col-md-2">
                        <i class="round">&nbsp;3&nbsp;</i>
                    </div>
                    <div class="col-xs-10">
                        <h3 class="module-title-1">Claim Your Winnings</h3>
                    </div>
                    <div class="col-xs-12">&nbsp;</div>
                    <div class="col-xs-12">
                        <p>CounterDraft tracks your score for
                            <br>you! Track your score with our
                            <br>web based, iOS, and Android apps.</p>
                    </div>
                    <div class="col-xs-12">
                        <div class="counter-icon-apple-store square">&nbsp;</div>
                    </div>
                    <div class="col-xs-12">
                        <div class="counter-icon-google-play square">&nbsp;</div>
                    </div>
                </div>
                <div class="body-button-wrapper col-xs-12 text-center">
                    <div class="col-md-4">&nbsp;</div>
                    <div class="col-md-4">
                        <button class="btn primary btn-block" ng-click="homeCtrl.showDialog()" data-toggle="modal" data-target="#newsletter-modal">START HERE</button>
                    </div>
                    <div class="col-md-4">&nbsp;</div>
                </div>
            </div>
        </div>
        <hr>
        <div class="offer-section">
            <div class="container">
                <div class="col-xs-1 offer-mini">NFL</div>
                <div class="col-xs-1 offer-mini">NBA</div>
                <div class="col-xs-1 offer-mini">MLB</div>
                <div class="col-xs-1 offer-mini">NHL</div>
                <div class="col-xs-1 offer-mini">PGA</div>
                <div class="col-xs-1 offer-mini">GFB</div>
                <div class="col-xs-1 offer-mini">NFL</div>
                <div class="col-xs-1 offer-mini">MMA</div>
                <div class="col-xs-1 offer-mini">BOXING</div>
            </div>
        </div>
        <div class="off-section">
        </div>
        <div ng-switch="homeCtrl.isModel">
            <div ng-switch-when="true">
                    <!-- Newsletter Modal -->
                    <div class="modal fade" id="newsletter-modal" role="dialog">
                        <div class="modal-dialog" ng-include="homeCtrl.NewsletterModel">
                        </div>
                    </div>
            </div>
            <div ng-switch-default></div>
        </div>
</section>
<%- contentFor('title') %>CounterDraft<%- contentFor('mainjs') %>home<%- contentFor('articleID') %>home