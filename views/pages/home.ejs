<section ng-controller="HomeCtrl as homeCtrl" class="main">
    <div class="top-header">
        <div class="container">
            <div class="col-sm-2">&nbsp;</div>
            <div class="col-sm-8 text-center">
                <h2>CounterDraft<br>A Fantasy Sport solution for your business</h2>
            </div>
            <div class="col-sm-2">&nbsp;</div>
        </div>
        <div class="col-xs-12">&nbsp;</div>
        <div class="col-xs-12">&nbsp;</div>
        <div class="home-body">
            <div class="container">
                <div class="body-section col-md-4">
                    <div class="col-xs-2 col-sm-1 col-md-2">
                        <i class="round">&nbsp;1&nbsp;</i>
                    </div>
                    <div class="col-xs-10">
                        <h3 class="module-title-1">Register</h3>
                    </div>
                    <div class="col-xs-12">&nbsp;</div>
                    <div class="col-xs-12">
                        <p>Signup your organization for CounterDraft.
                            <br>Creating a account only takes a second.</p>
                    </div>
                    <div class="col-xs-12">&nbsp;</div>
                    <div class="col-xs-12">
                        <img src="/images/produce/registration.png">
                    </div>
                </div>
                <div class="body-section col-md-4">
                    <div class="col-xs-2 col-sm-1 col-md-2">
                        <i class="round">&nbsp;2&nbsp;</i>
                    </div>
                    <div class="col-xs-10">
                        <h3 class="module-title-1">Create A Contest</h3>
                    </div>
                    <div class="col-xs-12">&nbsp;</div>
                    <div class="col-xs-12">
                        <p>Contest creation is cake, just click on the game section and our wizard will guide you.</p>
                    </div>
                    <div class="col-xs-12">&nbsp;</div>
                    <div class="col-xs-12">
                        <img src="/images/produce/create_contest.png">
                    </div>
                </div>
                <div class="body-section col-md-4">
                    <div class="col-xs-2 col-sm-1 col-md-2">
                        <i class="round">&nbsp;3&nbsp;</i>
                    </div>
                    <div class="col-xs-10">
                        <h3 class="module-title-1">Add Your Patrons</h3>
                    </div>
                    <div class="col-xs-12">&nbsp;</div>
                    <div class="col-xs-12">
                        <p>We manger your patrons for you, so you don't have too.</p>
                    </div>
                    <div class="col-xs-12">
                        <img src="/images/produce/create_patron.png">
                    </div>
                </div>
                <div class="body-button-wrapper col-xs-12 text-center">
                    <div class="col-md-4">&nbsp;</div>
                    <div class="col-md-4">
                        <a class="btn primary btn-block" href="<%= web_app %>/login?page=registration" target="_self">Get Started!</a>
                    </div>
                    <div class="col-md-4">&nbsp;</div>
                </div>
            </div>
        </div>
        <hr>
        <div class="offer-section">
            <div class="container">
                <div class="col-xs-1 offer-mini">NFL</div>
                <div class="col-xs-1 offer-mini">NBA</div>
                <div class="col-xs-1 offer-mini">MLB</div>
                <div class="col-xs-1 offer-mini">NHL</div>
                <div class="col-xs-1 offer-mini">PGA</div>
                <div class="col-xs-1 offer-mini">GFB</div>
                <div class="col-xs-1 offer-mini">WNBA</div>
                <div class="col-xs-1 offer-mini">MMA</div>
                <div class="col-xs-1 offer-mini">BOXING</div>
            </div>
        </div>
        <div class="off-section">
            <div class="container">
                <div class="col-xs-12">&nbsp;</div>
                <div class="col-xs-12 text-center cd-device-img">
                    <!-- <img src="/images/counterdraft-devices.jpg" class="cd-devices"> -->
                </div>
                <h4 class="col-xs-12">With CounterDraft your patrons have access to our mobile apps to track there score. We support all platforms, browser, iOS, and Android.</h3>
                <div class="col-xs-12">
                    <div class="counter-icon-apple-store square">&nbsp;</div>
                </div>
                <div class="col-xs-12">
                    <div class="counter-icon-google-play square">&nbsp;</div>
                </div>
                <div class="col-xs-12">&nbsp;</div>
            </div>
        </div>
        <div ng-switch="homeCtrl.isModel">
            <div ng-switch-when="true">
                    <!-- Newsletter Modal -->
                    <div class="modal fade counter-modal" id="newsletter-modal" role="dialog">
                        <div class="modal-dialog" ng-include="homeCtrl.NewsletterModel">
                        </div>
                    </div>
            </div>
            <div ng-switch-default></div>
        </div>
</section>
<%- contentFor('title') %>CounterDraft<%- contentFor('articleID') %>home<%- contentFor('end') %>